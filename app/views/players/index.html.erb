<p style="color: green"><%= notice %></p>

<h1>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
    <p>
      <%= link_to "Show this player", league_player_path(@league, player) %>
    </p>
  <% end %>
</div>

<%= link_to "New player", new_league_player_path(@league) %>
